<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.purefaithstudio.gurbani">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />

        <activity
            android:name="com.purefaithstudio.gurbani.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.purefaithstudio.gurbani.Second"
            android:label="@string/title_activity_second">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.purefaithstudio.gurbani.MainActivity" />
        </activity>
        <activity
            android:name="com.purefaithstudio.gurbani.Audio_one"
            android:label="@string/title_activity_audio_one"

             android:screenOrientation="portrait" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.MONKEY"/>
        </intent-filter>
        </activity>

        <activity
            android:name="com.purefaithstudio.gurbani.Gallary_one"
            android:label="@string/title_activity_gallary_one" />
        <activity
            android:name="com.purefaithstudio.gurbani.Gallary_two"
            android:label="@string/title_activity_gallary_two" />

        <service
            android:name="com.purefaithstudio.gurbani.MyService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.purefaithstudio.gurbani.MyService2"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
